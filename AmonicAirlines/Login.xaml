<Window x:Class="AmonicAirlines.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmonicAirlines"
        mc:Ignorable="d"
        Title="Login" Width="800" Height="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <StackPanel Orientation="Vertical" Width="600">
        <Image Width="550" Source="/Images/DS2017_TP09_color@4x.png" Margin="0 30 0 40" />
        <TextBlock Width="450" Text="Username" FontSize="18"/>
        <TextBox x:Name="tbUsername" Width="450" TextBlock.FontSize="18" Text="k.omar@amonic.com"/>
        <TextBlock Width="450" Text="Password" FontSize="18" Margin="0 20 0 0"/>
        <PasswordBox x:Name="pbPassword" Width="450" TextBlock.FontSize="18" Password="4258"/>
        <Grid Width="450" Margin="0 30 0 0">
            <Button x:Name="btnLogin" Content="Login" Width="170" HorizontalAlignment="Left" Margin="40 0 0 0" TextBlock.FontSize="18" Click="btnLogin_Click"/>
            <Button x:Name="btnExit" Content="Exit" Width="170" HorizontalAlignment="Right" Margin="0 0 40 0" TextBlock.FontSize="18" Click="btnExit_Click"/>
        </Grid>
    </StackPanel>
</Window>
